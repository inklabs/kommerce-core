<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="inklabs\kommerce\Entity\Address">

        <field name="attention" column="attention" type="string" length="128"/>
        <field name="company" column="company" type="string" length="128" nullable="true"/>
        <field name="address1" column="address_1" type="string" length="128"/>
        <field name="address2" column="address_2" type="string" length="128" nullable="true"/>
        <field name="city" column="city" type="string" length="128"/>

        <field name="state" column="state" type="string" length="2">
            <options>
                <option name="fixed">true</option>
            </options>
        </field>

        <field name="zip5" column="zip5" type="string" length="5">
            <options>
                <option name="fixed">true</option>
            </options>
        </field>

        <field name="zip4" column="zip4" type="string" length="4" nullable="true">
            <options>
                <option name="fixed">true</option>
            </options>
        </field>

        <field name="latitude" column="latitude" type="decimal">
            <options>
                <option name="precision">10</option>
                <option name="scale">6</option>
            </options>
        </field>

        <field name="longitude" column="longitude" type="decimal">
            <options>
                <option name="precision">10</option>
                <option name="scale">6</option>
            </options>
        </field>

    </embeddable>

</doctrine-mapping>
