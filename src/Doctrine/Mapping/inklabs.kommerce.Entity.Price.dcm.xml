<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="inklabs\kommerce\Entity\Price">

        <field name="origUnitPrice" column="orig_unit_price" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="unitPrice" column="unit_price" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="origQuantityPrice" column="orig_quantity_price" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="quantityPrice" column="quantity_price" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

    </embeddable>

</doctrine-mapping>
