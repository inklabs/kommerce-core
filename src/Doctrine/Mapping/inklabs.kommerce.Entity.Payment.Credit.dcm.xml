<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\Payment\Credit" table="`payment_credit`" repository-class="Doctrine\ORM\EntityRepository">

        <id name="id" type="integer" column="`id`">
            <generator strategy="AUTO" />
        </id>

        <field name="amount"            column="`amount`"             type="integer" />

        <field name="chargeId"          column="`charge_id`"          type="string" />
        <field name="chargeCreated"     column="`charge_created`"     type="integer" />
        <field name="chargeAmount"      column="`charge_amount`"      type="integer" />
        <field name="chargeCurrency"    column="`charge_currency`"    type="string" />
        <field name="chargeFee"         column="`charge_fee`"         type="integer" />
        <field name="chargeDescription" column="`charge_description`" type="string" />

        <field name="created" column="`created`" type="integer" />
        <field name="updated" column="`updated`" type="integer" nullable="true" />

        <many-to-one field="order" target-entity="inklabs\kommerce\Entity\Order" inversed-by="credit_payments">
            <join-column name="`order_id`" referenced-column-name="`id`" />
        </many-to-one>

        <entity-listeners>
            <entity-listener class="inklabs\kommerce\Entity\Accessor\UpdatedListener">
                <lifecycle-callback type="preUpdate" method="preUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>

</doctrine-mapping>
