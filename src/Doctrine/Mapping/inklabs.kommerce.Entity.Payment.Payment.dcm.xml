<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\Payment\Payment"
            inheritance-type="SINGLE_TABLE">

        <discriminator-column name="payment_type" type="string" length="6"/>
        <discriminator-map>
            <discriminator-mapping value="cash" class="Cash"/>
            <discriminator-mapping value="credit" class="Credit"/>
        </discriminator-map>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="amount" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-one field="order" target-entity="inklabs\kommerce\Entity\Order" inversed-by="payments">
            <join-column nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
