<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="inklabs\kommerce\Entity\Promotion">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="name" type="string" length="255" nullable="true"/>

        <field name="type" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="value" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="redemptions" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="maxRedemptions" type="smallint" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="reducesTaxSubtotal" type="boolean"/>

        <field name="start" type="date" nullable="true"/>
        <field name="end" type="date" nullable="true"/>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

    </mapped-superclass>

</doctrine-mapping>
