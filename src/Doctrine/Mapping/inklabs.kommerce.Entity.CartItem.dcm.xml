<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\CartItem"
            repository-class="inklabs\kommerce\EntityRepository\CartItem">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="quantity" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <one-to-many field="cartItemOptionProducts"
                     target-entity="CartItemOptionProduct"
                     mapped-by="cartItem"
                     fetch="EXTRA_LAZY"
                     orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many field="cartItemOptionValues"
                     target-entity="CartItemOptionValue"
                     mapped-by="cartItem"
                     fetch="EXTRA_LAZY"
                     orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many field="cartItemTextOptionValues"
                     target-entity="CartItemTextOptionValue"
                     mapped-by="cartItem"
                     fetch="EXTRA_LAZY"
                     orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one field="product" target-entity="inklabs\kommerce\Entity\Product" fetch="EAGER"/>

        <many-to-one field="cart" target-entity="Cart" inversed-by="cartItems" fetch="EAGER">
            <join-column nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
