<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\OrderItemOptionValue"
            table="order_item_option_value"
            repository-class="inklabs\kommerce\EntityRepository\OrderItemOptionValue">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="optionName" column="option_name" type="string" length="255"/>
        <field name="sku" column="sku" type="string" length="64" nullable="true"/>
        <field name="name" column="name" type="string" length="255" nullable="true"/>

        <field name="created" column="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" column="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-one field="orderItem" target-entity="OrderItem" inversed-by="orderItemOptionValues" fetch="EAGER">
            <join-column name="order_item_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="optionValue" target-entity="OptionValue" fetch="EAGER">
            <join-column name="option_value_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
