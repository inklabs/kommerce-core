<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\Tag" table="`tag`" repository-class="Doctrine\ORM\EntityRepository">

        <id name="id" type="integer" column="`id`">
            <generator strategy="AUTO" />
        </id>

        <field name="name"           column="`name`"             type="string" nullable="true" />
        <field name="description"    column="`description`"      type="string" nullable="true" />
        <field name="defaultImage"   column="`default_image`"    type="string" nullable="true" />
        <field name="isProductGroup" column="`is_product_group`" type="string" />
        <field name="isVisible"      column="`visible`"          type="boolean" />
        <field name="sortOrder"      column="`sort_order`"       type="integer" nullable="true" />
        <field name="created"        column="`created`"          type="integer" />
        <field name="updated"        column="`updated`"          type="integer" nullable="true" />

        <many-to-many field="products" target-entity="Product" mapped-by="tags" />

        <entity-listeners>
            <entity-listener class="inklabs\kommerce\Entity\Accessor\UpdatedListener">
                <lifecycle-callback type="preUpdate" method="preUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>

</doctrine-mapping>
