<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\Tag" table="`tag`" repository-class="Doctrine\ORM\EntityRepository">

        <id name="id" type="integer" column="`id`">
            <options>
                <option name="unsigned">true</option>
            </options>
            <generator strategy="AUTO" />
        </id>

        <field name="name" column="`name`" type="string" nullable="false">
            <options>
                <option name="length">255</option>
            </options>
        </field>
        <field name="description" column="`description`" type="text" nullable="true">
            <options>
                <option name="length">65535</option>
            </options>
        </field>
        <field name="defaultImage" column="`default_image`" type="string" nullable="true">
            <options>
                <option name="length">255</option>
            </options>
        </field>
        <field name="isProductGroup" column="`is_product_group`" type="boolean" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="isVisible" column="`visible`" type="boolean" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="sortOrder" column="`sort_order`" type="integer" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" column="`created`" type="integer" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="updated" column="`updated`" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-many field="products" target-entity="Product" mapped-by="tags" />
        <one-to-many field="images" target-entity="Image" mapped-by="tag" />

        <entity-listeners>
            <entity-listener class="inklabs\kommerce\Entity\Accessor\UpdatedListener">
                <lifecycle-callback type="preUpdate" method="preUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>

</doctrine-mapping>
