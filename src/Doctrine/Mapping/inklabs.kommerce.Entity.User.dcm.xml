<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\User"
            table="user"
            repository-class="inklabs\kommerce\EntityRepository\User">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="externalId" column="external_id" type="string" length="255" nullable="true" unique="true"/>
        <field name="firstName" column="first_name" type="string" length="50"/>
        <field name="lastName" column="last_name" type="string" length="50"/>
        <field name="email" column="email" type="string" length="255" nullable="true"/>

        <field name="passwordHash" column="password_hash" type="string" length="60" nullable="true">
            <options>
                <option name="fixed">true</option>
            </options>
        </field>

        <field name="totalLogins" column="total_logins" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="lastLogin" column="last_login" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="status" column="status" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" column="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" column="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <one-to-many field="orders" target-entity="Order" mapped-by="user" fetch="EXTRA_LAZY"/>

        <one-to-many field="logins" target-entity="UserLogin" mapped-by="user" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="DESC"/>
            </order-by>
        </one-to-many>

        <one-to-many field="tokens" target-entity="UserToken" mapped-by="user" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-many field="roles" target-entity="UserRole" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-table name="user_user_role">
                <join-columns>
                    <join-column name="user_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_role_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
