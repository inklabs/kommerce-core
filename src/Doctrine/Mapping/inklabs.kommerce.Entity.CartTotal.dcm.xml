<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="inklabs\kommerce\Entity\CartTotal">

        <field name="origSubtotal" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="subtotal" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="taxSubtotal" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="discount" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="shipping" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="shippingDiscount" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="tax" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="total" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="savings" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

    </embeddable>

</doctrine-mapping>
