<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\CatalogPromotion" table="`catalog_promotion`" repository-class="Doctrine\ORM\EntityRepository">

        <id name="id" type="integer" column="`id`">
            <options>
                <option name="unsigned">true</option>
            </options>
            <generator strategy="AUTO" />
        </id>

        <field name="name"               column="`name`"                 type="string" length="255" nullable="true" />
        <field name="type"               column="`type`"                 type="string" length="7" />
        <field name="value"              column="`value`"                type="integer" />
        <field name="redemptions"        column="`redemptions`"          type="integer" />
        <field name="start"              column="`start`"                type="date" />
        <field name="end"                column="`end`"                  type="date" />
        <field name="reducesTaxSubtotal" column="`reduces_tax_subtotal`" type="boolean" nullable="false" />
        <field name="maxRedemptions"     column="`max_redemptions`"      type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="code"               column="`code`"                 type="string" length="16" />

        <many-to-one field="tag" target-entity="Tag" fetch="EAGER">
            <join-column name="`tag_id`" referenced-column-name="`id`" />
        </many-to-one>

        <field name="created" column="`created`" type="integer" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="updated" column="`updated`" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <entity-listeners>
            <entity-listener class="inklabs\kommerce\Entity\Accessor\UpdatedListener">
                <lifecycle-callback type="preUpdate" method="preUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>

</doctrine-mapping>
