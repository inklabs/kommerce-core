<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\ProductQuantityDiscount" table="`product_discount`" repository-class="Doctrine\ORM\EntityRepository">

        <id name="id" type="integer" column="`id`">
            <generator strategy="AUTO" />
        </id>

        <field name="discountType"               column="`discount_type`"            type="string" />
        <field name="value"                      column="`discount_value`"           type="integer" />
        <field name="flagApplyCatalogPromotions" column="`apply_catalog_promotions`" type="boolean" />
        <field name="quantity"                   column="`quantity`"                 type="integer" />
        <field name="start"                      column="`start`"                    type="date" />
        <field name="end"                        column="`end`"                      type="date" />

        <field name="created" column="`created`" type="integer" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="updated" column="`updated`" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-one field="product" target-entity="Product" inversed-by="productQuantityDiscounts">
            <join-column name="`product_id`" referenced-column-name="`id`" />
        </many-to-one>

        <entity-listeners>
            <entity-listener class="inklabs\kommerce\Entity\Accessor\UpdatedListener">
                <lifecycle-callback type="preUpdate" method="preUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>

</doctrine-mapping>
