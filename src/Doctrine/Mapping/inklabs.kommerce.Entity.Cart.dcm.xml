<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\Cart"
            repository-class="inklabs\kommerce\EntityRepository\Cart">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <one-to-one field="user" target-entity="User" inversed-by="cart" fetch="EAGER"/>

        <one-to-many field="cartItems" target-entity="CartItem" mapped-by="cart" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-many field="coupons" target-entity="Coupon" fetch="EXTRA_LAZY"/>

    </entity>

</doctrine-mapping>
