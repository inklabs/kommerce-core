<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\ShipmentItem">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="uuid" type="uuid_binary"/>
        <field name="shipment_uuid" type="uuid_binary"/>

        <field name="quantityToShip" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-one field="orderItem" target-entity="OrderItem" inversed-by="shipmentItems" fetch="EXTRA_LAZY"/>

        <many-to-one field="shipment" target-entity="Shipment" inversed-by="shipmentItems">
            <join-column nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
