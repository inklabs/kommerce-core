<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="inklabs\kommerce\Entity\OrderAddress">

        <field name="firstName" column="`first_name`" type="string" />
        <field name="lastName"  column="`last_name`"  type="string" />
        <field name="company"   column="`company`"    type="string" nullable="true" />
        <field name="address1"  column="`address_1`"  type="string" />
        <field name="address2"  column="`address_2`"  type="string" nullable="true" />
        <field name="city"      column="`city`"       type="string" />
        <field name="state"     column="`state`"      type="string" />
        <field name="zip5"      column="`zip5`"       type="string" />
        <field name="zip4"      column="`zip4`"       type="string" nullable="true" />
        <field name="phone"     column="`phone`"      type="string" nullable="true" />
        <field name="email"     column="`email`"      type="string" />

    </embeddable>

</doctrine-mapping>
