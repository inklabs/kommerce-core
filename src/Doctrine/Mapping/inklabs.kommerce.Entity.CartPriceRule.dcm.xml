<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\CartPriceRule"
            table="cart_price_rule"
            repository-class="Doctrine\ORM\EntityRepository">

        <one-to-many field="items"
                     target-entity="inklabs\kommerce\Entity\CartPriceRuleItem\Item"
                     mapped-by="cartPriceRule"
                     fetch="EAGER">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <one-to-many field="cartPriceRuleDiscounts"
                     target-entity="inklabs\kommerce\Entity\CartPriceRuleDiscount"
                     mapped-by="cartPriceRule"
                     fetch="EAGER">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>

</doctrine-mapping>
