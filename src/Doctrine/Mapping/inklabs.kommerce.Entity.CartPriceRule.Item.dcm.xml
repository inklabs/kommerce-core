<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\CartPriceRule\Item" table="`cart_price_rule_item`" inheritance-type="SINGLE_TABLE">

        <discriminator-column name="type" type="string" length="7" />
        <discriminator-map>
            <discriminator-mapping value="product" class="Product" />
            <discriminator-mapping value="tag" class="Tag" />
        </discriminator-map>

        <id name="id" type="integer" column="`id`">
            <options>
                <option name="unsigned">true</option>
            </options>
            <generator strategy="AUTO" />
        </id>

        <field name="quantity" column="`quantity`" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" column="`created`" type="integer" nullable="false">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" column="`updated`" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

    </entity>

</doctrine-mapping>
